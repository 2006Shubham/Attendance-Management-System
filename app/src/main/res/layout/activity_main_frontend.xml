<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFrontend">

    <androidx.cardview.widget.CardView
        android:id="@+id/subject1"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/subname1"
        android:layout_width="match_parent"
        android:text="Subject 1"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/subject2"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/subname2"
            android:layout_width="match_parent"
            android:text="Subject 2"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/subject3"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/subname3"
            android:layout_width="match_parent"
            android:text="Subject 3"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/subject4"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/subname4"
            android:layout_width="match_parent"
            android:text="Subject 4"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/subject5"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/subname5"
            android:layout_width="match_parent"
            android:text="Subject 5"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>